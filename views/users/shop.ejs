    <div class="row">
      <div class="col-md-3">
        <ul class="list-unstyled categories" id="categoryList">
          <li><a href="#" data-category-id="all">All Categories</a></li>
            <% for (let i = 0; i < categories.length; i++) { %>
              <li><a href="#" data-category-id="<%= categories[i]._id %>"><%= categories[i].categoryname.charAt(0).toUpperCase() + categories[i].categoryname.slice(1) %> <span><%= categories[i].quantity %></span></a></li>
            <% } %>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="row align-items-center latest_product_inner">
          <% products.forEach(product => { %>
            <div class="col-lg-4 col-sm-6">
                <div class="single_product_item">
                  <a href="/singleProduct/<%= product.id %>" class="product-img">
                    <img src="/public/uploadProduct/<%= product.image[0] %>" alt="<%= product.product_name %>" style="width: 75%; height: 150px; object-fit: contain;">
                  </a>
                    <div class="single_product_text">
                        <h4><%= product.product_name %></h4>
                        <h3>Price: ₹<%= product.product_price.toFixed(2) %></h3>
                        <h4>Sales Price: ₹<%= product.product_sales_price.toFixed(2) %></h4>
                        <% if (product.quantity <= 0) { %>
                          <a href="#" class="add_cart">out of stock <i class="ti-heart" onclick="addToWishlist('<%= product._id %>')"></i></a>
                        <% } else { %>
                        <% if(typeof user !== 'undefined'){%>
                        <a href="#" class="add_cart" onclick="addtocart('<%= product._id %>')" data-product-id="<%= product._id %>">+ add to cart<i class="ti-heart" onclick="addToWishlist('<%= product._id %>')"></i></a>
                        <%} else { %>
                          <a href="/login" class="add_cart">Login its yours</a>
                          <%}%>
                      <% } %>
                    </div>
                </div>
            </div>
          <% }) %>
        </div>  



        <!-- // SCRIPT FOR SHOW PRODUCTS ACCORDING TO ITS CATEGORY -->
        
        
          

        <div class="row mt-5 pb-5">
          <div class="col-lg-12">
            <div class="custom-pagination">
              <% if (totalpages) { %>
                <ul class="list-unstyled">
                  <% if (currentpage > totalpages) { %>

                    <li>
                      <a href="?page=<%= currentpage - 1 %>">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                          <path fill-rule="evenodd" d="M5.854 4.646a.5.5 0 0 1 0 .708L3.207 8l2.647 2.646a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 0 1 .708 0z"/>
                          <path fill-rule="evenodd" d="M2.5 8a.5.5 0 0 1 .5-.5h10.5a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
                        </svg>                      
                      </a>
                    </li>
                 <% } %>
                  <% pages.forEach(page => { %>
                    <li class="active"><span><a href="?page=<%= page %>"><%= page %></a></span></li>
                  <% }); %>
                  <% if (currentpage > 1) { %>
                    <li>
                      <a href="?page=<%= currentpage + 1 %>">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                          <path fill-rule="evenodd" d="M10.146 4.646a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L12.793 8l-2.647-2.646a.5.5 0 0 1 0-.708z"/>
